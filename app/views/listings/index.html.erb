<% @page_title = "Show All Listings" %>
<% @page_desc = "This area is to show all listings" %>

<div>
  <div class="panel panel-default panel-table">
    <div class="panel-heading">
      <div class="row">
        <div class="col col-xs-6">
          <%= link_to("Back to Categories", categories_path, :class => 'btn btn-sm btn-primary btn-create') %>
        </div>
        <div class="col col-xs-6 text-right">
          <%= link_to 'Add New Listing', new_listing_path(:section_id => @section.id), class: "btn btn-sm btn-primary btn-create" %>
        </div>
      </div>
    </div>
    <div class="panel-body table-responsive">
      <table class="table table-striped table-bordered table-list">
        <thead>
          <tr>
            <th class="text-center">Listing Name</th>
            <th class="text-center">Sub Category Name</th>
            <th class="text-center">Description</th>
            <th class="text-center">Price</th>
            <th class="text-center">Visible</th>
            <th class="text-center">Actions</th>
          </tr> 
        </thead>
        <tbody id="myTable">  
          <% @listings.each do |listing| %>
              <tr>
                <td><%= listing.name %></td>
                <td class="text-center"><%= @section.name %></td>
                <td><%= listing.description %></td>
                <td class="text-center"><%= listing.price %></td>
                <td class="text-center"><%= listing.visible ? "Yes" : "No" %></td>
                <td class="text-center">
                  <%= link_to("", listing_path(listing, :section_id => @section.id), 
                    :class => "btn btn-primary btn-xs glyphicon glyphicon-flag", 
                    :title => "Show") %>
                  <%= link_to("", edit_listing_path(listing, :section_id => @section.id), 
                    :class => "btn btn-warning btn-xs glyphicon glyphicon-edit",
                    :title => "Edit") %>
                  <%= link_to("", delete_listing_path(listing, :section_id => @section.id), 
                    :class => "btn btn-danger btn-xs glyphicon glyphicon-remove",
                    :title => "Delete") %>
                </td>
              </tr>
            <% end %>
        </tbody>
      </table>
    </div>
