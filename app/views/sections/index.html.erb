<% @page_title = "All Sub Categories" %>

<%= link_to("<< Back to Categories", categories_path, :class => 'btn btn-link') %>


<div class="page-header">
  <h2>Show All Sub Categories</h2>
</div>

<%= link_to '<< Add New Sub Category', new_section_path(:category_id => @category.id), class: "btn btn-link" %>

<table class="table table-striped table-bordered">
  <tr>
    <th class="center">Sub Category Name</th>
    <th class="center">Category Name</th>
    <th class="center">Visible</th>
    <th class="center">Actions</th>
    <th class="center">Listings</th>
  </tr>
  
  <% @sections.each do |section| %>
    <tr>
      <td><%= section.name %></td>
      <td><%= @category.name %></td>
      <td><%= section.visible ? "Yes" : "No" %></td>
      <td>
        <%= link_to("",section_path(section, :category_id => @category.id), :class => "glyphicon glyphicon-flag") %>
        <%= link_to("",edit_section_path(section, :category_id => @category.id), :class => "glyphicon glyphicon-pencil") %>
        <%= link_to("",delete_section_path(section, :category_id => @category.id), :class => "glyphicon glyphicon-trash") %>
      </td>
      <td>
       <%= link_to("View Listings", listings_path(:section_id => section.id)) %>        
      </td>
    </tr>
  <% end %>
</table>