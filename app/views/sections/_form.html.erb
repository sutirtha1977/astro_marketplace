<%= error_messages_for(f.object) %>

<div class="container">
  <form>
    <div class="form-group">
      <%= label_tag(:sectionName, "Sub Category Name") %>
      <%= f.text_field(:name, class: 'form-control', id: 'sectionName', placeholder: 'Enter Sub Category Name') %>
      <small id="subCategoryNameHelp" class="form-text text-muted">Please enter the Sub Category Name.</small>
    </div>
    <div class="form-group">
      <%= label_tag(:categoryName, "Category Name") %>
      <%= f.object.category.name %>
    </div>
    <div class="form-group">
      <%= label_tag(:visible, "Visible") %>
      <%= f.check_box :visible %>
      <p>
        <small id="visibilityHelp" class="form-text text-muted">Please choose whether to show or not.</small>        
      </p>
    </div> 
    <%= f.submit("Submit", :class => 'btn btn-primary') %>
  </form>
</div>