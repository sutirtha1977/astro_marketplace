<%= error_messages_for(f.object) %>

<div class="container">
  <form>
    <div class="form-group">
      <%= label_tag(:categoryName, "Category Name") %>
      <%= f.text_field(:name, class: 'form-control', id: 'categoryName', placeholder: 'Enter Category Name') %>
      <small id="categoryNameHelp" class="form-text text-muted">Please enter the Category Name.</small>
    </div>
    <div class="form-group">
      <%= f.radio_button(:category, "Service") %>
      <%= label_tag(:service, "Service") %>
       <%= f.radio_button(:category, "Product") %>
      <%= label_tag(:product, "Product") %>
      <p>
        <small id="categoryCatHelp" class="form-text text-muted">Please choose a Category Type.</small>        
      </p>
    </div>
    <div class="form-group">
      <%= label_tag(:visible, "Visible") %>
      <%= f.check_box :visible %>
      <p>
        <small id="visibilityHelp" class="form-text text-muted">Please choose whether to show or not.</small>        
      </p>
    </div> 
    <%= f.submit("Submit", :class => 'btn btn-primary') %>
  </form>
</div>

