<% @page_title = "All Categories" %>

<%= link_to '<< Add New Category', new_category_path, class: "btn btn-link" %>

<div class="page-header">
  <h2>Show All Categories</h2>
</div>

<table class="table table-striped table-bordered">
  <tr>
    <th class="center">Name</th>
    <th class="center">Category</th>
    <th class="center">Visible</th>
    <th class="center">Actions</th>
  </tr>
  
  <% @categories.each do |category| %>
    <tr>
      <td><%= category.name %></td>
      <td><%= category.category %></td>
      <td><%= category.visible ? "Yes" : "No" %></td>
      <td>
        <%= link_to("",category_path(category), :class => "glyphicon glyphicon-flag") %>
        <%= link_to("",edit_category_path(category), :class => "glyphicon glyphicon-pencil") %>
        <%= link_to("",delete_category_path(category), :class => "glyphicon glyphicon-trash") %>
      </td>
    </tr>
  <% end %>
</table>