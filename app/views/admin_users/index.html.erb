<% @page_title = "Show All Admin Users" %>
<% @page_desc = "This area displays all Admin Users" %>

<div class="container">
  <div class="col-md-10 col-md-offset-1">
    <div class="panel panel-default panel-table">
      <div class="panel-heading">
        <div class="row">
          <div class="col col-xs-6">
            <h3 class="panel-title"></h3>
          </div>
          <div class="col col-xs-6 text-right">
            <%= link_to 'Add Admin User', 
                new_admin_user_path, 
                class: "btn btn-square-toround btn-bordered-primary btn-sm" %>
          </div>
        </div>
      </div>
      <div class="panel-body table-responsive">
        <table class="table table-striped table-bordered table-list">
          <thead>
            <tr>
              <th class="text-center"><em class="fa fa-cog"></em></th>
              <th class="text-center">Username</th>
              <th class="text-center">Name</th>
              <th class="text-center">Email</th>
            </tr> 
          </thead>
          <tbody id="myTable">  
            <% @admin_users.each do |admin_user| %>
              <% if(admin_user.id != session[:user_id]) %>
              <tr>
                <td class="text-center">
                  <%= link_to("", edit_admin_user_path(admin_user), 
                    :class => "btn btn-default btn-xs fa fa-pencil",
                    :title => "Edit") %>
                  <%= link_to("", delete_admin_user_path(admin_user), 
                    :class => "btn btn-danger btn-xs fa fa-trash",
                    :title => "Delete") %>
                </td>
                <td class="text-center"><%= admin_user.username %></td>
                <td class="text-center"><%= admin_user.name %></td>
                <td class="text-center"><%= mail_to(admin_user.email) %></td>
              </tr>
              <% end %>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

